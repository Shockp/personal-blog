{
  "name": "personal-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint:check && npm run format:check && npm run build",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:server": "cross-env ANALYZE=true BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env ANALYZE=true BUNDLE_ANALYZE=browser npm run build",
    "analyze:both": "cross-env ANALYZE=true BUNDLE_ANALYZE=both npm run build",
    "bundle:size": "npm run build && npx next-bundle-analyzer",
    "perf:lighthouse": "npm run build && npm run start & sleep 5 && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\" && pkill -f \"next start\"",
    "perf:build-time": "node scripts/simple-build-monitor.cjs",
    "perf:bundle-stats": "cross-env ANALYZE=true npm run build && npx webpack-bundle-analyzer .next/analyze/browser.json",
    "perf:monitor": "npm run perf:build-time && npm run bundle:size && npm run perf:lighthouse",
    "size-limit": "npx size-limit",
    "build:profile": "cross-env NODE_OPTIONS='--inspect' npm run build"
  },
  "dependencies": {
    "@next/third-parties": "^15.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.468.0",
    "next": "15.1.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.0",
    "@size-limit/file": "^11.1.6",
    "@size-limit/webpack": "^11.1.6",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "size-limit": "^11.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
